<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name %> <%= @friend.last_name %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Email: <%= @friend.email %></h6>
    <h6 class="card-subtitle mb-2 text-muted">Phone Number: <%= @friend.phone %></h6>
    <h6 class="card-subtitle mb-2 text-muted">Twitter: <%= @friend.twitter %></h6>
    <br/>
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
  </div>
</div>

